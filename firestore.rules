rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email.lower() == 'christo@emgroup.co.nz';
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Projects: Anyone auth can read, only admin can write
    match /projects/{projectId} {
      allow read: if isAuth();
      allow write: if isAdmin();

      // Subcollections (updates, actions, qa, photos)
      match /{collection}/{docId} {
        allow read: if isAuth();
        // Writes allowed if admin, OR if explicitly "QA" or "Actions" creation by auth users
        // This is a simplified rule; production should be more granular per collection
        allow create: if isAuth(); 
        allow update, delete: if isAdmin();
      }
    }
  }
}
